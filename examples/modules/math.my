fn sumArray(xs: []int) -> int {
    let total: int = 0;

    for (let i: int = 0; i < len(xs); i = i + 1) {
        total = total + xs[i];
    }

    return total;
}

fn sumRange(n: int) -> int {
    let total: int = 0;
    let i: int = 0;

    for (; i < n; i = i + 1) {
        total = total + i;
    }

    return total;
}

fn factorial(n: int) -> int {
    let result: int = 1;
    let i: int = 1;

    while i <= n {
        result = result * i;
        i = i + 1;
    }

    return result;
}
