import option;

fn firstChar(s: string) -> option.Option[char] {
    if len(s) == 0 {
        return option.none();
    }

    return option.some(s[0]);
}

fn countVowels(s: string) -> int {
    let count: int = 0;
    let i: int = 0;

    while i < len(s) {
        let ch: char = s[i];

        if ch == 'a' || ch == 'e' || ch == 'i' || ch == 'o' || ch == 'u' {
            count = count + 1;
        }

        i = i + 1;
    }

    return count;
}
